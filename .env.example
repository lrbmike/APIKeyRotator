# 数据库配置
DB_HOST=localhost
DB_USER=appdb
DB_PASSWORD=your_strong_password
DB_NAME=api_gateway_db
DB_PORT=3306
MYSQL_ROOT_PASSWORD=a_very_strong_root_password

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
# 密码是可选的，留空则无密码
REDIS_PASSWORD=

# 后端端口
BACKEND_PORT=8000

# 前端端口
FRONTEND_PORT=5173
# 本地开发地址 (Python版本使用 backend，Go版本使用 backend-go)
VITE_API_TARGET_URL=http://backend:8000

# Nginx 配置
NGINX_PORT=80
NGINX_SSL_PORT=443

# 全局代理认证 KEY
# 任何调用代理地址的请求，都必须在 Header 中包含 X-Proxy-Key
#
# 支持单个密钥或多个密钥（逗号分隔）:
# 单个密钥: GLOBAL_PROXY_KEYS=a_very_secret_key
# 多个密钥: GLOBAL_PROXY_KEYS=key1,key2,key3
GLOBAL_PROXY_KEYS=a_very_secret_key

# 后台登录配置
ADMIN_USER=admin
ADMIN_PASSWORD=a_very_strong_password

# 代理服务的公开基础URL
PROXY_PUBLIC_BASE_URL=https://api.yourdomain.com

# 数据库表重置选项 (设置为 true 时会删除并重新创建所有表)
RESET_DB_TABLES=false